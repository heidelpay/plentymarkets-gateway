<style>
    #heidelpayForm iframe {
        border: none;
        height: 16rem;
        width: 100%;
    }
</style>

<div id="heidelpayForm" class="container-fluid">
    <form id="paymentFrameForm" action="{{ paymentFrameUrl }}" method="post">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div id="accountHolderContainer" data-validate="text" class="input-unit">
                    <label for="accountHolder">{{ trans('heidelpay::template.accountHolder') }}</label>
                    <input tabindex="1" id="accountHolder" name="ACCOUNT.HOLDER" minlength="4" maxlength="60" autocomplete="off" type="text">
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div id="accountIbanContainer" data-validate="text" class="input-unit">
                    <label for="accountIban">{{ trans('heidelpay::template.accountIban') }}</label>
                    <input tabindex="2" id="accountIban" name="ACCOUNT.IBAN" minlength="3" maxlength="64" autocomplete="off" type="text">
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-3">
                <a class="btn btn-secondary btn-block" id="heidelpayCancelBtn" role="button" href="/checkout">
                    {{ trans('heidelpay::template.cancel') }}
                </a>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-block" id="heidelpaySubmitBtn">
                    {{ trans('heidelpay::template.payNow') }}
                </button>
            </div>
            <div class="col-md-3"></div>
        </div>
    </form>
</div>
