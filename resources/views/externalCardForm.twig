<style>
    #heidelpayForm iframe {
        border: none;
        height: 16rem;
        width: 30rem;
    }

    #heidelpayForm .row .col-md-6 {
        text-align: center;
    }
</style>

<div id="heidelpayForm" class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <iframe src="{{ paymentFrameUrl }}" id="heidelpayIFrame"></iframe>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <button type="button" class="btn btn-secondary" id="heidelpayCancelBtn">
                {{ trans('Ceres::Template.generalCancel') }}
            </button>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary" id="heidelpaySubmitBtn">
                {{ trans('Ceres::Template.orderBuyNow') }}
            </button>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

<script type="text/javascript">
    var paymentIFrame = document.getElementById('heidelpayIFrame');
    var submitButton = document.getElementById('heidelpaySubmitBtn');
    var targetOrigin = getIFrameDomain(paymentIFrame);

    if (window.addEventListener) {
        window.addEventListener('message', receiveResponse);
        submitButton.addEventListener('click', submitIFrame);
    } else if (window.attachEvent) {
        window.attachEvent('onmessage', receiveResponse);
        submitButton.attachEvent('onclick', submitIFrame);
    }

    function getIFrameDomain(elem) {
        var url = elem.src.split("/");
        return url[0] + "//" + url[2];
    }

    function receiveResponse(event) {
        if (event.origin !== targetOrigin) {
            return;
        }

        var responseContent = JSON.parse(event.data);
        if (responseContent["POST.VALIDATION"] === "NOK") {
            submitButton.disabled = false;
        }
    }

    function submitIFrame() {
        submitButton.disabled = true;
        paymentIFrame.contentWindow.postMessage("{}", targetOrigin);
    }
</script>
